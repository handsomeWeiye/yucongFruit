/* 设置swiper属性 */
swiper {
  height: 300rpx;
  padding: 2px 10px;
}
/*设置图片属性*/
swiper-item image {
  width: 100%;
  height: 100%;
}

/* 推荐分隔栏 */
.introduced {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: white;
  margin-top: 15rpx;
  color: #e64340;
}

.introduced .introudced-img {
  width: 175rpx;
  height: 56rpx;
}

.welfares{
  display: flex;
  justify-content: left;
  flex-direction: row;
  flex-wrap: wrap;
  margin:10px 5px;
}
.welfares-good{
  height: 500rpx; 
  width: 47%;
  margin:0px auto;
  margin-bottom: 20px;
  position: relative;
  display: inline-block;
  font-size: 24rpx;
}
.welfares-image{
  width: 100%;
  height: 60%;
  border: 1px #eee solid; 
}
.welfares-good .product-name{
  color: #000;
  height: 28rpx;
  text-align:left;
   margin: 0px 5px; 
   margin-bottom: 5px; 
  font-size: 30rpx;
  font-weight: normal;
}
.product-price-wrap .product-price-new{
  color: #e80080;
  margin-left:5rpx;
  font-weight:900;
  font-size: 40rpx;
}
.product-price-wrap .product-price-old{
  color: #888;
  text-decoration: line-through;
  padding-left: 2px;
  font-size: 28rpx;
}
.product-price-wrap .discount{
  position: absolute;
  right: 5px;
  background-color: #000;
  color: #fff;
}
.product-price-wrap .icon{
  position: absolute;
  padding-inline-start: 5px;
  width: 25px;
  height: 25px;
}
.button-green {
  background-color: #4caf50; /* Green */
    font-size: 50rpx;
  margin-bottom: 8rpx;
}
.button-red {
  background-color: #f44336; /* 红色 */
  font-size: 50rpx;
  margin-bottom: 8rpx;
}

button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-flex;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 80rpx;
}



.cartContainer{
  width: 75rpx;
  height: 120rpx;
  background-size: cover;
  padding-bottom: 20rpx;
  padding-left: 5rpx;
}

.text-red{
  color: #f02618;
  padding-left: 5rpx;
  padding-right: 5rpx;
  font-size:50rpx;
}

.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}


/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 12px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
  color: #888;
}